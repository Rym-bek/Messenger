<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.Telegram" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_theme</item>
        <item name="colorPrimaryVariant">@color/main_theme</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_theme</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="colorControlNormal">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="materialButtonStyle">@style/Widget.Telegram.MainCustomButtonStyle</item>
        <item name="android:textViewStyle">@style/NormalTextStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>

        <!-- SearchView -->
        <item name="autoCompleteTextViewStyle">@style/Widget.MyApp.AutoCompleteTextView.SearchView</item>
    </style>

    <style name="Widget.MyApp.AutoCompleteTextView.SearchView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor_white</item>
    </style>


    <style name="Theme.Telegram.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="Widget.Telegram.MainCustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Telegram.MainCustomButtonStyle.WhiteButtonStyle">
        <item name="android:background">@drawable/ripple_button</item>
    </style>

    <style name="Widget.Telegram.MainCustomButtonStyle.WhiteButtonStyle.TextAppearanceBig">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize_16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="Widget.Telegram.MainCustomButtonStyle.WhiteButtonStyle.TextAppearanceSmall">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textSize_14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>


    <style name="ScrollbarStyle">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:scrollbarSize">12dp</item>
        <item name="android:scrollbarThumbVertical">@drawable/ic_scrollbar_view</item>
    </style>

    <style name="Widget.Telegram.KeyboardButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:backgroundTint">@color/white_grey</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Widget.Telegram.KeyboardButtonStyle.TextAppearance">
        <item name="android:textSize">@dimen/LoginPage_CustomKeyboard_textSize</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>


    <style name="AppDialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/textSize_14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NormalTextStyle.Normal">
        <item name="android:textSize">@dimen/textSize_16sp</item>
    </style>

    <style name="NormalTextStyle.Normal.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="NormalTextStyle.Normal.Medium.MainTheme">
        <item name="android:textColor">@color/main_theme</item>
    </style>

    <style name="NormalTextStyle.Small">
        <item name="android:textSize">@dimen/textSize_13sp</item>
    </style>
    <style name="NormalTextStyle.Small.Medium">
    <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="NormalTextStyle.Small.Medium.Gray">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="NormalTextStyle.Small.Gray">
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="NormalTextStyle.MainTheme">
        <item name="android:textColor">@color/main_theme</item>
    </style>


    <style name="NormalTextStyle.Big">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NormalTextStyle.Big.MainTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/main_theme</item>
    </style>

    <style name="NormalTextStyle.SmallTextStyle">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/textSize_14sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="NormalTextStyle.BoldTextStyle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/textSize_16sp</item>
    </style>

    <style name="NormalTextStyle.BoldTextStyle.InputSmsCodeStyle">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/text_borders</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="ConstraintMainStyle">
        <item name="android:background">@drawable/text_borders</item>
    </style>

    <style name="ConstraintMainStyle.Margins">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="EditTextMainStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/cursor_custom</item>
    </style>

    <style name="EditTextMainStyle.Margins">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
    </style>

    <style name="MiniPromptTextStyle">
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MiniPromptTextStyle.TextAppearance">
        <item name="android:textColor">@color/main_theme</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="MiniPromptTextStyle.TextAppearance.Margin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
    </style>

    <style name="InputTextToUser">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:background">@color/white</item>
        <item name="android:maxLines">6</item>
        <item name="android:hint">@string/message</item>
    </style>


    <style name="TabIndicatorStyle">
        <item name="tabIndicatorColor">@color/main_theme</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/MyTitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/MySubTitleTextAppearance</item>
        <item name="background">@color/main_theme</item>
    </style>

    <style name="MyTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MySubTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/grey</item>
    </style>



</resources>