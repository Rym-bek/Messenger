<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_mailRegistration_mail_container"
        style="@style/ConstraintMainStyle.Margins"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editText_mailRegistration_mail_text"

            style="@style/EditTextMainStyle.Margins"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView_mailRegistration_mail_title"
        style="@style/MiniPromptTextStyle.TextAppearance.Margin"
        android:layout_width="40dp"
        android:text="@string/mail"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout_mailRegistration_mail_container"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout_mailRegistration_mail_container"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout_mailRegistration_mail_container" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_mailRegistration_password_container"
        style="@style/ConstraintMainStyle.Margins"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout_mailRegistration_mail_container">

        <EditText
            android:id="@+id/editText_mailRegistration_password_text"
            style="@style/EditTextMainStyle.Margins"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView_mailRegistration_password_title"
        style="@style/MiniPromptTextStyle.TextAppearance.Margin"
        android:layout_width="45dp"
        android:text="@string/password"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout_mailRegistration_password_container"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout_mailRegistration_password_container"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout_mailRegistration_password_container" />

    <Button
        android:id="@+id/button_mailRegistration_further"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:text="@string/registration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout_mailRegistration_password_container" />


</androidx.constraintlayout.widget.ConstraintLayout>